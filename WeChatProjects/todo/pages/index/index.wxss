/* 搜索框样式 */
.search_box{
  width: 100%; 
  background-color: pink;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}
.search {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  width: 80%;
  height: 60rpx;
  margin: 0 auto;
 
  /* margin-top: 5%; */
  border: 1rpx solid whitesmoke;
  border-radius: 5rpx;
}

/* 搜索框提示文字样式 */
.search input {
  font-size: 27rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left: 30rpx;
}

/* 搜索框小图标 */
.search image {
  width: 40rpx;
  height: 40rpx;
  padding-right: 20rpx;
}

