/* pages/index/index.wxss */
page{
  height: 100%;
  width: 100%;
}
.outer-view{
  width: 100%;
  background-color: #fed;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
}
.inner-view{
  width: 140rpx;
  height: 140rpx;
  text-align: center;
  padding-top: 5px;
}
.inner-view image{
  width: 100rpx;
  height:100rpx;
}
.inner-view .inner-fnt{
  font-size: 23rpx;
}
.scroll-view{
  width: 100%;
  display: flex;
}
.margin{
  margin: 10rpx 16rpx;
}
.for-tu image{
  width: 100%;
}
.nav{
  display: flex;
  flex-direction: row;
  height: 50rpx;
  white-space: nowrap;

}
.nav navigator{
  margin: 0 10rpx;
  height: 20rpx;
  font-weight: bold;
}
.background-scroll{
  background-color: #fed;
}
.list{
  display: flex;
  flex-direction: row;
}
.list image{
  width: 140rpx;
  height: 140rpx;
  margin: 20rpx;
}
.title{
  font-size: 40rpx;
  font-weight: bold;
  margin: 10rpx 0;
}
.follow{
  color: orange;
  background-color: yellow;
  border-radius: 10rpx;
  padding: 0 20rpx;
  margin: 10rpx 5rpx 0 0;
}
.try-play{
  color: green;
  background-color: greenyellow;
  border-radius: 10rpx;
  padding: 0 20rpx;
  margin: 10rpx  0 0 5rpx;
}
.list-btn{
  width: 180rpx;
  height: 60rpx;
  background-color: orange;
  color: white;
  margin: 60rpx 0 0 120rpx;
}
.ad{
  width: 100%;
  height: 200rpx;
}